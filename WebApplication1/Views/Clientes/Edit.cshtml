@model WebApplication1.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CliId" />
            <div class="form-group">
                <label asp-for="CliPessoaid" class="control-label">Email</label>
                <select asp-for="CliPessoaid" class="form-control" asp-items="ViewBag.CliPessoaid"></select>
                <span asp-validation-for="CliPessoaid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CliOrganizacaoid" class="control-label">CNPJ</label>
                <select asp-for="CliOrganizacaoid" class="form-control" asp-items="ViewBag.CliOrganizacaoid"></select>
                <span asp-validation-for="CliOrganizacaoid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
