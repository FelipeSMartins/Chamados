@model IEnumerable<WebApplication1.Pessoa>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PesNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PesEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PesId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.PesId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.PesId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
