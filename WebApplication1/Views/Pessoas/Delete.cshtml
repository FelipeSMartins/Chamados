@model WebApplication1.Pessoa

@{
    ViewData["Title"] = "Delete";
}


<h3>Tem certeza de que deseja excluir isso?</h3>
<div>
    <h4>Pessoa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PesNome)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PesEmail)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PesId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
