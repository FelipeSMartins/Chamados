@model WebApplication1.DepartamentoCategoria

@{
    ViewData["Title"] = "Create";
}

<h4>Departamento - Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DcDepartamentoid" class="control-label">Departamento</label>
                <select asp-for="DcDepartamentoid" class ="form-control" asp-items="ViewBag.DcDepartamentoid"></select>
            </div>
            <div class="form-group">
                <label asp-for="DcCategoriaid" class="control-label">Categoria</label>
                <select asp-for="DcCategoriaid" class ="form-control" asp-items="ViewBag.DcCategoriaid"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
